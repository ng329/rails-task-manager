
<h2><%= @task.title %></h2>
<p><%= @task.details %></p>

<%# <%= check_box_tag 'role_ids[]', role.id -%>
<% if @task.completed %>
  <p>This task is completed</p>
<% else  %>
  <p>This task is not completed</p>
<% end %>

<%= link_to "edit task", edit_task_path %>

<%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<%= link_to "back to all tasks", tasks_path %>
