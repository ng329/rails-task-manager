<%= form_with model: @task do |f| %>
<div class="form-group">
    <%= f.label :title, class: "form-control" %>
    <%= f.text_field :title %>
    <%= f.label :details, class: "form-control" %>
    <%= f.text_field :details %>
    <div class="checkbox">
      <%= f.check_box :completed %>Completed
    </div>
    <%= f.submit %>
  </div>
<% end %>
